unit untPeriodosLetivosCadastro;

interface

uses
  Winapi.Windows, Winapi.Messages, System.SysUtils, System.Variants, System.Classes, Vcl.Graphics,
  Vcl.Controls, Vcl.Forms, Vcl.Dialogs, unt_modeloCadastro, Vcl.StdCtrls,
  Vcl.Imaging.pngimage, Vcl.ExtCtrls, Vcl.Buttons;

type
  TfrmPeriodosLetivosCadastro = class(Tfrm_modelo_cadastro)
    lbledt_codigo: TLabeledEdit;
    lbledt_nome: TLabeledEdit;
    lbledt_qtdenotas: TLabeledEdit;
    Label2: TLabel;
    Label3: TLabel;
    Label4: TLabel;
    procedure btnSalvarClick(Sender: TObject);
    procedure btnCancelarClick(Sender: TObject);
  private
    { Private declarations }
  public
    { Public declarations }
    status : string;

  end;

var
  frmPeriodosLetivosCadastro: TfrmPeriodosLetivosCadastro;

implementation

{$R *.dfm}


uses classPeriodoLetivo, untPeriodosLetivosCadastro;

procedure TfrmPeriodosLetivosCadastro.btnCancelarClick(Sender: TObject);
begin
  inherited;
    Close;
end;

procedure TfrmPeriodosLetivosCadastro.btnSalvarClick(Sender: TObject);
var
  pel: TClassPeriodoLetivo;
begin
  inherited;
  pel := TClassPeriodoLetivo.Create;

  if status = 'I' then
begin
   //Alimentar os atributos da classe
   cidade.CID_CEP := StrToInt(lbledt_CEP.Text);
   cidade.CID_NOME := lbledt_cidade.Text;
   cidade.CID_UF := lbledt_uf.Text;
   cidade.PAISES_PAI_CODIGO := StrToInt(DBLookupComboBox1.KeyValue);

    if cidade.Inserir() then
    begin
      ShowMessage('Resgistro inserido com sucesso!');
      //atualizar a grid no form de consulta
      frm_cidades_consulta.FormShow(nil); //alt + F11
      //fecha o form de cadastro
      Close;
    end;
end else  //se o status for editar
if status = 'E' then
begin
  //aqui vai os comandos para editar um registro
  //alimentar os atributos da classe
  cidade.CID_CEP := StrToInt(lbledt_cep.Text);
  cidade.CID_NOME := lbledt_cidade.Text;
  cidade.CID_UF := lbledt_uf.Text;
  cidade.PAISES_PAI_CODIGO :=  StrToInt(DBLookupComboBox1.KeyValue);

  if cidade.Alterar() then
  begin
    ShowMessage('Registro alterado com sucesso!');
    //atualiza o grid
    frm_cidades_consulta.FormShow(nil);
    //fecha o formulario
    Close;
  end;



end;
end;

procedure Tfrm_cidades_cadastro.ListarPaises;
var
pais : TclassPaises;
begin
pais := TClassPaises.Create;
//configurar no design do formulário no componente dblookupComboBox

//DBLookupComboBox1.ListSource := pais.ConsultarPaises().DataSource;
//define qual é o valor da seleção
//DBLookupComboBox1.KeyValue := 'PAI_CODIGO';
//define o valor que vai mostrar no lookup
//DBLookupComboBox1.ListField := 'PAI_NOME';

 //alimenta com todos os registros da tabela paises
 dsPaises.DataSet := pais.ConsultarPaises();


end;

end.
